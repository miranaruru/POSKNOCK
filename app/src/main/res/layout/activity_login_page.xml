<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/background_floating_material_light"
    android:id="@+id/activity_login_page">



    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=" POS \n KNOCK "
        android:textSize="25dp"
        android:textColor="#F3A545"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:background="@drawable/img_pos_knock_background"/>


    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/menu_button"
        android:layout_gravity="right|top" />

    //username
    <TextView
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:text="USERNAME"
        android:textSize="25dp"
        android:textColor="#A2CC17"
        android:background="#ffffff"
        android:layout_marginTop="-80dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/txt_username"
        android:layout_gravity="left|center"
        android:gravity="left|center"
        android:singleLine="false"
        android:typeface="monospace" />

    <TextView
        android:layout_width="230dp"
        android:layout_height="44dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="50dp"
        android:background="#A2CC17"
        android:text=""
        android:id="@+id/txt_user2"
        android:layout_gravity="left|center" />

    <TextView
        android:layout_width="226dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="52dp"
        android:text=" ganjunyi94@hotmail.com"
        android:background="#ffffff"
        android:id="@+id/txt_user"
        android:gravity="left|center"
        android:layout_gravity="left|center" />

    //password
    <TextView
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:text="PASSWORD"
        android:textSize="25dp"
        android:textColor="#A2CC17"
        android:background="#ffffff"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/txt_password"
        android:layout_gravity="left|center"
        android:gravity="left|center"
        android:singleLine="false"
        android:typeface="monospace" />

    <TextView
        android:layout_width="230dp"
        android:layout_height="44dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="50dp"
        android:background="#A2CC17"
        android:text=""
        android:id="@+id/txt_pass2"
        android:layout_gravity="left|center" />

    <TextView
        android:layout_width="226dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="52dp"
        android:text=" ......"
        android:background="#ffffff"
        android:id="@+id/txt_pass"
        android:gravity="left|center"
        android:layout_gravity="left|center" />



    //forgot password?
    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="forget "
        android:layout_marginTop="75dp"
        android:layout_marginRight="30dp"
        android:textColor="#A2CC17"
        android:id="@+id/txt_forget"
        android:layout_gravity="right|center_vertical" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="password? "
        android:layout_marginTop="95dp"
        android:textColor="#A2CC17"
        android:layout_marginRight="10dp"
        android:id="@+id/txt_forget2"
        android:layout_gravity="right|center_vertical" />
    //斜体 下划线

    //login btn
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Log In"
        android:textSize="20dp"
        android:id="@+id/btn_login"
        android:background="#A2CC17"
        android:textColor="#ffffff"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="0dp"
        android:layout_gravity="center|bottom" />


    //fb btn
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgbtn_facebook"
        android:src="@drawable/facebook_link"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="-45dp"
        android:background="#ffffff"
        android:layout_gravity="center|bottom" />
    //tw_btn
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgbtn_twitter"
        android:src="@drawable/twitter_link"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="0dp"
        android:background="#ffffff"
        android:layout_gravity="center|bottom" />
    //ins_btn
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgbtn_instagram"
        android:src="@drawable/instagram_link"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="45dp"
        android:background="#ffffff"
        android:layout_gravity="center|bottom" />
</FrameLayout>