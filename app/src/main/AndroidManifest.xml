<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mirana.posknock" >



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <permission android:name="com.example.mirana.posknock.permission.MAPS_RECEIVE" android:protectionLevel="signature"/>
        <uses-permission android:name="com.example.mirana.posknock.permission.MAPS_RECEIVE"/>
        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
        <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
        <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
        <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true"/>

        // First page activity
        <activity
            android:name=".activity.FirstPageActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        // Login page activity
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"></activity>
        // Home page activity
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/app_name"></activity>

        <activity
            android:name=".activity.CategoryActivity"
            android:label="@string/app_name"></activity>

        <activity
            android:name=".activity.FAQActivity"
            android:label="@string/app_name"></activity>

        <activity
            android:name=".activity.ContactUsActivity"
            android:label="@string/app_name"></activity>

        <activity
            android:name=".activity.StoreListActivity"
            android:label="@string/app_name"></activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyA8k99-my78fs6x2qc5PMqXgL-9VHoI2us" />
    </application>

</manifest>
